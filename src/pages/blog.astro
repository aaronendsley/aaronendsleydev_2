---
import PostListLayout from "../layouts/PostListLayout.astro";
const PageTitle = 'Blog';
const Description = "Welcome to my Blog"; 
const PageDescription= 'Below you will find Projects that i have worked on that I think are some of my best work. In each Project you will find a link to the project or images of the Project If the application is no longer in opperation. I will include links to the code for each project if it is publicly available.';
const AllBlog = await Astro.glob('../pages/blog/*.md');
---

<PostListLayout PageTitle={PageTitle} Description={Description} PageDescription={PageDescription} Posts={AllBlog}/>