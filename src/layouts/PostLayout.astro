---
import BaseLayout from './BaseLayout.astro';
const {frontmatter} = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title} siteDescription={frontmatter.description}>
    <img src={frontmatter.headerImage} alt={frontmatter.headerAlt}/>
    <h2>{frontmatter.title}</h2>
    <section class="container post-decorator">
<slot/>
</section>

</BaseLayout>

<style>
 h1{
    color:var(--green);
    text-align: center;
    font-weight:900;
 }
 img{
    width:80%;
    border-radius: 20px;
    border: 2px solid var(--green);
    margin: 0 auto;
    display: block;
    
 }


</style>

